@model List<Libro>
<div class="d-flex flex-wrap justify-content-center contenedor" style="background-color: azure;">
    @foreach(Libro libro in Model){
        <div class="card m-2" id="carta" style="max-width:400px;">
            <div class="card-header"><h3>@libro.Titulo</h3></div>
            <div class="card-body">
                <img src="~/images/@libro.Portada" style="width:350px; padding-bottom:20px;"/>
                <h4>@libro.Autor</h4>
                <h6>@libro.Editorial</h6>
                <p style ="white-space: nowrap;
                        overflow: hidden;
                        text-overflow: ellipsis;">
                    @libro.Resumen
                </p>
            </div>
            <div class="card-footer">
                <a asp-action="AgregarCarrito" asp-route-IdLibro="@libro.Id" class="btn btn-success">Añadir al carrito</a>
                <a asp-action="Details" asp-route-IdLibro="@libro.Id" class="btn btn-info">Ver</a>
            </div>
        </div>
    }
</div>

<style>

    .contenedor{
        margin:0px;
        padding:0px;
        width:100% !important;
    }
    #carta{
        transition: all .1s ease-in-out;
    }
    #carta:hover{
        transform: scale(1.1);
        z-index:100;
    }
</style>